datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  password    String
  otp_secret  String
  otp_verified Boolean
  credentialsUpdated Boolean  @default(false) 
}

model ServiceNowCredentials {
  id       Int    @id @default(autoincrement())
  instance String
  username String
  password String
}

model sepio {
  id       Int     @id @default(autoincrement())
  instance String
  username String
  password String
}
